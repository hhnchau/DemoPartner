<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/padding_popup_main"
    android:layout_marginRight="@dimen/padding_popup_main">


    <LinearLayout
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_text"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="@dimen/size_logo"
            android:layout_height="@dimen/size_logo"
            android:layout_gravity="center"
            android:padding="@dimen/padding_logo"
            android:src="@drawable/logo"
            android:visibility="gone"/>

        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
            android:id="@+id/popup_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_text"
            android:textSize="@dimen/text_popup" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                android:id="@+id/popup_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_button"
                android:textSize="@dimen/text_popup" />

            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                android:id="@+id/popup_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/popup_apply"
                android:gravity="center"
                android:padding="@dimen/padding_button"
                android:textColor="@color/white"
                android:textSize="@dimen/text_popup" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>