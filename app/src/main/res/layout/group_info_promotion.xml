<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/imageView_image_group"
        android:layout_width="@dimen/info_promotion_group_width"
        android:layout_height="@dimen/info_promotion_group_height"
        android:src="@drawable/promotion_org_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_promotion_group_height"
        android:background="@drawable/background_item_with_shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_none_group"
            android:layout_width="@dimen/info_promotion_group_width"
            android:layout_height="@dimen/info_promotion_group_height"
            android:src="@drawable/promotion_org" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/info_promotion_group_height"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                android:id="@+id/textView_group_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_promotion_margin_text"
                android:layout_marginBottom="@dimen/info_promotion_margin_text"
                android:maxLines="1"
                android:textSize="@dimen/info_promotion_title_text_18" />

            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                android:id="@+id/textView_group_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_promotion_margin_text"
                android:layout_marginBottom="@dimen/info_promotion_margin_text"
                android:maxLines="4"
                android:textSize="@dimen/info_promotion_text_16" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>