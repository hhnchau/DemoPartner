<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_comment_padding"
    android:background="@color/white"
    android:orientation="vertical">

    <!--Username-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
            android:id="@+id/textView_item_comment_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/org"
            android:textSize="@dimen/item_comment_text_size" />

        <!--Star-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_item_comment_star_1"
                android:layout_width="@dimen/item_comment_icon_star"
                android:layout_height="@dimen/item_comment_icon_star" />

            <ImageView
                android:id="@+id/imageView_item_comment_star_2"
                android:layout_width="@dimen/item_comment_icon_star"
                android:layout_height="@dimen/item_comment_icon_star" />

            <ImageView
                android:id="@+id/imageView_item_comment_star_3"
                android:layout_width="@dimen/item_comment_icon_star"
                android:layout_height="@dimen/item_comment_icon_star" />

            <ImageView
                android:id="@+id/imageView_item_comment_star_4"
                android:layout_width="@dimen/item_comment_icon_star"
                android:layout_height="@dimen/item_comment_icon_star" />

            <ImageView
                android:id="@+id/imageView_item_comment_star_5"
                android:layout_width="@dimen/item_comment_icon_star"
                android:layout_height="@dimen/item_comment_icon_star" />
        </LinearLayout>
    </LinearLayout>

    <!--VIP-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
            android:id="@+id/textView_item_comment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_comment_text_size" />

        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
            android:id="@+id/textView_item_comment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/item_comment_text_size" />
    </LinearLayout>

    <!--Padding-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_comment_padding_height" />

    <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
        android:id="@+id/textView_item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_comment_text_size" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.3dp"-->
        <!--android:background="@color/black" />-->

</LinearLayout>