<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Add content here-->
        <!--Add content here-->
        <!--Add content here-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/setting_text_padding">

            <!--Toolbar-->
            <!--Toolbar-->
            <!--Toolbar-->

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Toolbar-->
            <!--Toolbar-->
            <!--Toolbar-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Time check-out-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_checkout_time"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                        android:id="@+id/textView_setting_check_out_time"
                        android:layout_width="@dimen/setting_width_arrow"
                        android:layout_height="@dimen/setting_height_arrow"
                        android:layout_marginBottom="@dimen/setting_margin_arrow"
                        android:layout_marginTop="@dimen/setting_margin_arrow"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/arrow"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/setting_padding_arrow"
                        android:paddingRight="@dimen/setting_padding_arrow"
                        android:textSize="@dimen/setting_text_size_regular" />

                    <!--Overnight-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_overnight"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                            android:id="@+id/textView_setting_overnight_time_from"
                            android:layout_width="@dimen/setting_width_arrow"
                            android:layout_height="@dimen/setting_height_arrow"
                            android:layout_marginBottom="@dimen/setting_margin_arrow"
                            android:layout_marginRight="@dimen/setting_margin_two_arrow"
                            android:layout_marginTop="@dimen/setting_margin_arrow"
                            android:background="@drawable/rectangle"
                            android:drawableRight="@drawable/arrow"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_padding_arrow"
                            android:paddingRight="@dimen/setting_padding_arrow"
                            android:textSize="@dimen/setting_text_size_regular" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                            android:id="@+id/textView_setting_overnight_time_to"
                            android:layout_width="@dimen/setting_width_arrow"
                            android:layout_height="@dimen/setting_height_arrow"
                            android:layout_marginBottom="@dimen/setting_margin_arrow"
                            android:layout_marginLeft="@dimen/setting_margin_two_arrow"
                            android:layout_marginTop="@dimen/setting_margin_arrow"
                            android:background="@drawable/rectangle"
                            android:drawableRight="@drawable/arrow"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/setting_padding_arrow"
                            android:paddingRight="@dimen/setting_padding_arrow"
                            android:textSize="@dimen/setting_text_size_regular" />

                    </LinearLayout>

                    <!--Display Number-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_number_line"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                        android:id="@+id/textView_setting_number_lines"
                        android:layout_width="@dimen/setting_width_arrow"
                        android:layout_height="@dimen/setting_height_arrow"
                        android:layout_marginBottom="@dimen/setting_margin_arrow"
                        android:layout_marginTop="@dimen/setting_margin_arrow"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/arrow"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/setting_padding_arrow"
                        android:paddingRight="@dimen/setting_padding_arrow"
                        android:textSize="@dimen/setting_text_size_regular" />

                    <!--Status Cancel-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_cancel_status"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/setting_margin_arrow"
                        android:layout_marginTop="@dimen/setting_margin_arrow"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/setting_padding_input">

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_cancel_auto"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_auto"
                                android:textSize="@dimen/setting_text_size_regular" />
                        </LinearLayout>

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/setting_margin_two_arrow"
                            android:layout_marginRight="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_cancel_manual"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_manual_cancel"
                                android:textSize="@dimen/setting_text_size_regular" />
                        </LinearLayout>

                        <!--Input-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/setting_margin_input"
                                android:text="@string/txt_8_before"
                                android:textSize="@dimen/setting_text_size_regular" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:id="@+id/textView_setting_cancel_status_before"
                                android:layout_width="@dimen/setting_width_input"
                                android:layout_height="@dimen/setting_height_input"
                                android:background="@drawable/rectangle"
                                android:gravity="center"
                                android:maxLength="3"
                                android:textSize="@dimen/setting_text_size_regular" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/setting_margin_input"
                                android:gravity="center"
                                android:text="@string/hour"
                                android:textSize="@dimen/setting_text_size_regular" />
                        </LinearLayout>


                    </LinearLayout>

                    <!--Status Confirm-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_confirm_status"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/setting_margin_arrow"
                        android:layout_marginTop="@dimen/setting_margin_arrow"
                        android:orientation="horizontal"
                        android:padding="@dimen/setting_padding_input">

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_confirm_auto"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_auto"
                                android:textSize="@dimen/setting_text_size_regular" />
                        </LinearLayout>

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_confirm_manual"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_manual_confirm"
                                android:textSize="@dimen/setting_text_size_regular" />

                        </LinearLayout>


                    </LinearLayout>

                    <!--Disable Weekend-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/setting_width_color"
                            android:layout_height="match_parent"
                            android:background="@color/org" />

                        <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/setting_text_padding"
                            android:text="@string/txt_8_weekend"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/setting_margin_arrow"
                        android:layout_marginTop="@dimen/setting_margin_arrow"
                        android:orientation="horizontal"
                        android:padding="@dimen/setting_padding_input">

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_weekend_on"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_weekend_on"
                                android:textSize="@dimen/setting_text_size_regular" />
                        </LinearLayout>

                        <!--Box-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/setting_margin_two_arrow"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_setting_weekend_off"
                                android:layout_width="@dimen/setting_icon_box"
                                android:layout_height="@dimen/setting_icon_box"
                                android:layout_marginRight="@dimen/setting_margin_two_arrow"
                                android:src="@drawable/box" />

                            <com.appromobile.partnerapp.font.TextView_Font_SanFrancisco_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_8_weekend_off"
                                android:textSize="@dimen/setting_text_size_regular" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <!--Add content here-->
        <!--Add content here-->
        <!--Add content here-->

    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/width_menu"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="@color/black"
        android:dividerHeight="5sp"
        android:scrollbars="none" />
</android.support.v4.widget.DrawerLayout>

